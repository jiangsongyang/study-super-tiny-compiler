{
  "name": "study-super-tiny-compiler",
  "version": "1.0.0",
  "description": "",
  "author": "jiangsongyang",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx husky install",
    "dev": "rollup -c rollup.config.js -w --sourcemap",
    "build": "rollup -c rollup.config.js",
    "test": "jest",
    "lint:eslint": "npx eslint \"src/*\" --fix",
    "lint:prettier": "npx prettier \"src/*\" --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm precommit",
      "commit-msg": "node scripts/commit-msg.mjs"
    }
  },
  "lint-staged": {
    "./packages/**/*.{ts,tsx}": [
      "pnpm lint:eslint",
      "pnpm lint:prettier",
      "git add ."

    ],
    "./packages/**/*.{css,less}": [
      "pnpm lint:prettier",
      "git add ."
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/eslint": "^8.4.3",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-jest": "^28.1.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "cac": "^6.7.12",
    "chalk": "^5.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "eslint-config-jsy": "^1.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-system-split": "^1.0.4",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.0",
    "lint-staged": "^13.0.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "string_decoder": "^1.3.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "rollup": "^2.77.2"
  }
}